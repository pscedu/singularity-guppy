#!/bin/bash

VERSION=6.0.0
PACKAGE=guppy
TOOL=guppy
DIRECTORY=$(dirname "$0")

STORAGES=(/ocean /hive /bil /local)

OPTIONS=""
for STORAGE in "${STORAGES[@]}"
do
  	if [ -d "$STORAGE" ]; then
                OPTIONS=$OPTIONS" -B $STORAGE"
        fi
done

singularity exec $OPTIONS $DIRECTORY/singularity-$PACKAGE-$VERSION.sif $TOOL "$@"
